# Template for API keys used by apps. Copy to api-keys.yaml (gitignored) and fill in values.
# Use: sops <path-to-secret.sops.yaml> then paste from this file when editing secrets.
# Never commit api-keys.yaml.
#
# Structure: group or app name, then key: value. Add new keys here when we add apps.

recyclarr:
  SONARR_API_KEY: ""   # Sonarr > Settings > General > API Key
  RADARR_API_KEY: ""   # Radarr > Settings > General > API Key

