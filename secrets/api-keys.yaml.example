# Template for API keys used by apps. Copy to api-keys.yaml (gitignored) and fill in values.
# Use: sops <path-to-secret.sops.yaml> then paste from this file when editing secrets.
# Never commit api-keys.yaml.
#
# Structure: group or app name, then key: value. Add new keys here when we add apps.

# ============================================================================
# Paperless NGX - Document Management (linked to existing Postgres)
# ============================================================================
# Admin login: sops -d kubernetes/apps/default/paperless/app/secret.sops.yaml
# Uses postgres.databases.svc.cluster.local, paperless DB. If Postgres was
# already initialized before paperless was added, create DB manually via psql.

# ============================================================================
# Recyclarr - TRaSH Guides Sync
# ============================================================================
recyclarr:
  SONARR_API_KEY: ""   # Sonarr > Settings > General > API Key
  RADARR_API_KEY: ""   # Radarr > Settings > General > API Key

# ============================================================================
# Homepage Widgets - API keys for service widgets
# ============================================================================
homepage:
  # Infrastructure widgets
  HOMEPAGE_TRUENAS_KEY: ""        # TrueNAS API key (Settings > API Keys)
  HOMEPAGE_PROXMOX_USER: ""       # Proxmox username (e.g., prometheus@pam)
  HOMEPAGE_PROXMOX_PASS: ""       # Proxmox password or API token secret

  # Network widgets
  HOMEPAGE_ADGUARD_1_URL: ""      # AdGuard Primary URL (e.g., http://192.168.1.x)
  HOMEPAGE_ADGUARD_1_USER: ""    # AdGuard Primary username
  HOMEPAGE_ADGUARD_1_PASS: ""    # AdGuard Primary password
  HOMEPAGE_ADGUARD_2_URL: ""      # AdGuard Secondary URL
  HOMEPAGE_ADGUARD_2_USER: ""    # AdGuard Secondary username
  HOMEPAGE_ADGUARD_2_PASS: ""    # AdGuard Secondary password

  # Media widgets
  HOMEPAGE_IMMICH_KEY: ""         # Immich > Settings > API Keys > Create new key
  HOMEPAGE_JELLYFIN_KEY: ""       # Jellyfin > Dashboard > API Key
  HOMEPAGE_PLEX_TOKEN: ""         # Plex > Settings > Network > Show Advanced > Plex Token (from plex.tv/claim)
  HOMEPAGE_SONARR_KEY: ""         # Sonarr > Settings > General > API Key
  HOMEPAGE_RADARR_KEY: ""         # Radarr > Settings > General > API Key
  HOMEPAGE_LIDARR_KEY: ""         # Lidarr > Settings > General > API Key
  HOMEPAGE_READARR_KEY: ""        # Readarr > Settings > General > API Key
  HOMEPAGE_BAZARR_KEY: ""         # Bazarr > Settings > General > API Key
  HOMEPAGE_PROWLARR_KEY: ""       # Prowlarr > Settings > General > API Key
  HOMEPAGE_OVERSEERR_KEY: ""      # Overseerr > Settings > General > API Key
  HOMEPAGE_QBT_USER: ""           # qBittorrent username
  HOMEPAGE_QBT_PASS: ""           # qBittorrent password
  HOMEPAGE_SAB_KEY: ""            # SABnzbd > Config > General > API Key

# ============================================================================
# Monitoring Exporters
# ============================================================================
monitoring:
  # TrueNAS exporter
  TRUENAS_HOST: ""                # TrueNAS hostname/IP (e.g., 192.168.1.1)
  TRUENAS_API_KEY: ""             # TrueNAS API key (Settings > API Keys)

  # Proxmox exporter
  PROXMOX_HOST: ""                # Proxmox hostname/IP (e.g., 192.168.1.100)
  PROXMOX_USER: ""                 # Proxmox API user (e.g., prometheus@pam)
  PROXMOX_PASSWORD: ""             # Proxmox API token secret or password

  # AdGuard exporters (if different from homepage)
  ADGUARD_1_IP: ""                # AdGuard Primary IP
  ADGUARD_1_USER: ""              # AdGuard Primary username
  ADGUARD_1_PASSWORD: ""          # AdGuard Primary password
  ADGUARD_2_IP: ""                # AdGuard Secondary IP
  ADGUARD_2_USER: ""              # AdGuard Secondary username
  ADGUARD_2_PASSWORD: ""         # AdGuard Secondary password

  # iLO exporters (DL360 G9 & DL380 G9)
  ILO_DL360_HOST: ""              # iLO DL360 IP address
  ILO_DL360_USER: ""              # iLO DL360 username
  ILO_DL360_PASSWORD: ""          # iLO DL360 password
  ILO_DL380_HOST: ""              # iLO DL380 IP address
  ILO_DL380_USER: ""              # iLO DL380 username
  ILO_DL380_PASSWORD: ""          # iLO DL380 password

# ============================================================================
# VolSync - Kubernetes PVC backup (Restic)
# ============================================================================
# Used in restic-config Secret for backup destination. When using TrueNAS NFS
# we'll add PV/PVC and repo path; when using S3/MinIO set RESTIC_REPOSITORY
# to s3:https://... and add AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY below.
volsync:
  RESTIC_PASSWORD: ""   # Generate: openssl rand -base64 32

# ============================================================================
# Homepage Stats Service (if you have homepage-stats deployed)
# ============================================================================
homepage_stats:
  sonarr_api_key: ""              # Sonarr > Settings > General > API Key
  radarr_api_key: ""              # Radarr > Settings > General > API Key
  lidarr_api_key: ""              # Lidarr > Settings > General > API Key
  readarr_api_key: ""             # Readarr > Settings > General > API Key
  bazarr_api_key: ""              # Bazarr > Settings > General > API Key
  prowlarr_api_key: ""            # Prowlarr > Settings > General > API Key
  immich_api_key: ""              # Immich > Settings > API Keys > Create new key
